<UserControl x:Class="PrismWarrantyService.UI.Views.Admin.Orders.AddOrder.AddOrderNewCompanyView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" >
    <GroupBox Style="{DynamicResource MaterialDesignCardGroupBox}"
              Header="Компания: новая"
              Height="200">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="16"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBox Text="{Binding NewCompany.Name}"
	                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                     materialDesign:HintAssist.Hint="Клиент"
                     Grid.Row="0"/>
            <Button Command="{Binding SelectClientCompanyCommand}"
                    Style="{StaticResource MaterialDesignFlatButton}"
                    Content="Вернуться к списку"
                    Grid.Row="2"/>
        </Grid>
    </GroupBox>
</UserControl>