<Window x:Class="PrismWarrantyService.UI.Views.Orders.AddOrderView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        xmlns:local="clr-namespace:PrismWarrantyService.UI.Views.Orders"
        mc:Ignorable="d"
        Title="Добавление нового заказа"
        Height="370"
        Width="600"
        MinHeight="370">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="3"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="3"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="3"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="3"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="3"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="3"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="3"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="3"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="3"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="0.25*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="0.25*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <Label Content="Заказ:"
               Grid.Row="1"
               Grid.Column="1"
               Grid.ColumnSpan="3"/>
        <TextBox Text="{Binding NewOrder.Summary}"
                 Grid.Row="3"
                 Grid.Column="1"
                 Grid.ColumnSpan="3"/>
        <Label Content="Тип:"
               Grid.Row="5"
               Grid.Column="1"/>
        <ComboBox ItemsSource="{Binding OrderTypes}"
                  SelectedItem="{Binding NewOrder.OrderType}"
                  Grid.Row="7"
                  Grid.Column="1"/>
        <Label Content="Статус:"
               Grid.Row="5"
               Grid.Column="3"/>
        <ComboBox ItemsSource="{Binding OrderStates}"
                  SelectedItem="{Binding NewOrder.OrderState}"
                  Grid.Row="7"
                  Grid.Column="3"/>
        <Label Content="Клиент:"
               Grid.Row="9"
               Grid.Column="1"
               Grid.ColumnSpan="3"/>
        <ComboBox ItemsSource="{Binding Clients}"
                  SelectedItem="{Binding NewOrder.Client}"
                  Grid.Row="11"
                  Grid.Column="1"
                  Grid.ColumnSpan="3"/>
        <Label Content="Описание:"
               Grid.Row="13"
               Grid.Column="1"
               Grid.ColumnSpan="3"/>
        <TextBox Text="{Binding NewOrder.Description}"
                 Grid.Row="15"
                 Grid.Column="1"
                 Grid.RowSpan="5"
                 Grid.ColumnSpan="3"
                 TextWrapping="Wrap"
                 VerticalContentAlignment="Top"/>
        <CheckBox Name="needNewClient"
                  IsChecked="{Binding NeedNewClient}"
                  Content="Новый клиент"
                  Grid.Row="3"
                  Grid.Column="5"
                  Checked="NeedNewClient_Checked"
                  Unchecked="NeedNewClient_Unchecked"/>
        <Label Content="Клиент:"
               Grid.Row="5"
               Grid.Column="5"/>
        <TextBox Name="nameTextBox"
                 Text="{Binding NewClient.Name}"
                 IsReadOnly="True"
                 Grid.Row="7"
                 Grid.Column="5"/>
        <Label Content="Компания:"
               Grid.Row="9"
               Grid.Column="5"/>
        <TextBox Name="companyTextBox"
                 Text="{Binding NewClient.Company}"
                 IsReadOnly="True"
                 Grid.Row="11"
                 Grid.Column="5"/>
        <Label Content="E-mail:"
               Grid.Row="13"
               Grid.Column="5"/>
        <TextBox Name="emailTextBox"
                 Text="{Binding NewClient.Email}"
                 IsReadOnly="True"
                 Grid.Row="15"
                 Grid.Column="5"/>
        <Label Content="Номер телефона:"
               Grid.Row="17"
               Grid.Column="5"/>
        <TextBox Name="phoneNumberTextBox"
                 Text="{Binding NewClient.PhoneNumber}"
                 IsReadOnly="True"
                 Grid.Row="19"
                 Grid.Column="5"/>
        <Button IsDefault="True"
                Content="Добавить"
                Grid.Row="21"
                Grid.Column="1"
                Grid.ColumnSpan="3"
                Click="Accept_Click"
                Command="{Binding AddOrderCommand}"/>
        <Button IsCancel="True"
                Content="Отмена"
                Grid.Row="21"
                Grid.Column="5"/>
    </Grid>
</Window>
