<Window x:Class="PrismWarrantyService.UI.Views.Orders.AddOrderView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        xmlns:local="clr-namespace:PrismWarrantyService.UI.Views.Orders"
        mc:Ignorable="d"
        Title="Добавление нового заказа"
        Height="340"
        Width="600"
        MinHeight="340">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="3"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="3"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="3"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="3"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="3"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="3"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="3"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="3"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="3"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="0.2*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="0.4*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="0.4*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <Label Content="Заказ:"
               Grid.Row="1"
               Grid.Column="1"
               Grid.ColumnSpan="3"/>
        <TextBox Text="{Binding NewOrder.Summary}"
                 Grid.Row="3"
                 Grid.Column="1"
                 Grid.ColumnSpan="3"/>
        <Label Content="Тип:"
               Grid.Row="5"
               Grid.Column="1"/>
        <ComboBox ItemsSource="{Binding OrderTypes}"
                  SelectedItem="{Binding NewOrder.OrderType}"
                  Grid.Row="7"
                  Grid.Column="1"/>
        <Label Content="Клиент:"
               Grid.Row="5"
               Grid.Column="3"/>
        <ComboBox ItemsSource="{Binding Clients}"
                  SelectedItem="{Binding NewOrder.Client}"
                  Grid.Row="7"
                  Grid.Column="3"/>
        <Label Content="Описание:"
               Grid.Row="9"
               Grid.Column="1"
               Grid.ColumnSpan="3"/>
        <TextBox Text="{Binding NewOrder.Description}"
                 Grid.Row="11"
                 Grid.Column="1"
                 Grid.RowSpan="9"
                 Grid.ColumnSpan="3"
                 TextWrapping="Wrap"
                 VerticalContentAlignment="Top"/>
        <CheckBox Name="isClientNew"
                  Content="Клиент из базы"
                  Grid.Row="3"
                  Grid.Column="5"
                  IsChecked="True"/>
        <Label Content="Клиент:"
               Grid.Row="5"
               Grid.Column="5"/>
        <TextBox Text="{Binding NewClient.Name}"
                 IsReadOnly="{Binding ElementName=isClientNew, Path=IsChecked}"
                 Grid.Row="7"
                 Grid.Column="5"/>
        <Label Content="Компания:"
               Grid.Row="9"
               Grid.Column="5"/>
        <TextBox Text="{Binding NewClient.Company}"
                 IsReadOnly="{Binding ElementName=isClientNew, Path=IsChecked}"
                 Grid.Row="11"
                 Grid.Column="5"/>
        <Label Content="E-mail:"
               Grid.Row="13"
               Grid.Column="5"/>
        <TextBox Text="{Binding NewClient.Email}"
                 IsReadOnly="{Binding ElementName=isClientNew, Path=IsChecked}"
                 Grid.Row="15"
                 Grid.Column="5"/>
        <Label Content="Номер телефона:"
               Grid.Row="17"
               Grid.Column="5"/>
        <TextBox Text="{Binding NewClient.PhoneNumber}"
                 IsReadOnly="{Binding ElementName=isClientNew, Path=IsChecked}"
                 Grid.Row="19"
                 Grid.Column="5"/>
    </Grid>
</Window>
