<UserControl x:Class="PrismWarrantyService.UI.Views.Orders.AddOrder.AddOrderSelectClientView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" >
    <GroupBox Style="{DynamicResource MaterialDesignCardGroupBox}"
              Header="Клиент: выбрать из списка"
              Height="245">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="16"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <ListView ItemsSource="{Binding Clients}"
                      SelectedItem="{Binding NewOrder.Client}"
                      Grid.Row="0"/>
            <Button Command="{Binding AddNewClientToOrderCommand}"
                    Style="{StaticResource MaterialDesignFlatButton}"
                    Content="Добавить нового клиента"
                    Grid.Row="2"/>
        </Grid>
    </GroupBox>
</UserControl>