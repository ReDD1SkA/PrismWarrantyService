<Window x:Class="PrismWarrantyService.UI.Views.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:PrismWarrantyService.UI.Views"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        mc:Ignorable="d"
        Title="Warranty service" Height="700" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.3*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="0.7*"/>
        </Grid.ColumnDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.3*"/>
                <RowDefinition Height="0.7*"/>
            </Grid.RowDefinitions>
            <Button Content="Placeholder: Signed as"
                    Grid.Row="0"
                    Width="Auto"
                    Height="Auto"/>
            <Button Content="Placeholder: Navigation"
                    Grid.Row="1"
                    Width="Auto"
                    Height="Auto"/>
        </Grid>
        <GridSplitter Grid.Column="1"
                      ShowsPreview="False"
                      Width="3"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Stretch"/>
        <TabControl Grid.Column="2">
            <TabItem Name="orders"
                     Header="Заказы">
                <TabItem.Content>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.1*"/>
                            <RowDefinition Height="0.7*"/>
                            <RowDefinition Height="0.1*"/>
                            <RowDefinition Height="0.1*"/>
                        </Grid.RowDefinitions>
                        <Button Content="Placeholder: Search + filters"
                                Grid.Row="0"
                                Width="Auto"
                                Height="Auto"/>
                        <views:OrderListView Grid.Row="1"/>
                        <Button Content="Placeholder: Details"
                                Grid.Row="2"
                                Width="Auto"
                                Height="Auto"/>
                        <Button Content="Placeholder: CRUD"
                                Grid.Row="3"
                                Width="Auto"
                                Height="Auto"/>
                    </Grid>
                </TabItem.Content>
            </TabItem>
            <TabItem Name="clients"
                     Header="Клиенты">
                <TabItem.Content>
                    <Button Content="Placeholder: Clients"
                            Width="Auto"
                            Height="Auto"/>
                </TabItem.Content>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
