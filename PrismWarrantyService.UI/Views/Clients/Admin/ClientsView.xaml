<UserControl x:Class="PrismWarrantyService.UI.Views.Clients.Admin.ClientsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             xmlns:converters="clr-namespace:PrismWarrantyService.UI.Converters"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d">
    <UserControl.Resources>
        <converters:OrderDateTimeToDateConverter x:Key="OrderDateTimeToDateConverter" />
        <ItemContainerTemplate x:Key="ClientItemTemplate">
            <Border Padding="0,0,0,8"
                    BorderBrush="{DynamicResource MaterialDesignDivider}"
                    BorderThickness="0,0,0,1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <ToggleButton Style="{StaticResource MaterialDesignActionDarkToggleButton}"
                                  Content="{Binding ClientID}"
                                  FontSize="10"
                                  Margin="8,0,16,0"
                                  Grid.Column="0">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Checked">
                                <i:InvokeCommandAction
                                    Command="{Binding DataContext.ClientCheckedCommand, RelativeSource={RelativeSource FindAncestor, AncestorType=UserControl}}"
                                    CommandParameter="{Binding DataContext, RelativeSource={RelativeSource FindAncestor, AncestorType=ListViewItem}}" />
                            </i:EventTrigger>
                            <i:EventTrigger EventName="Unchecked">
                                <i:InvokeCommandAction
                                    Command="{Binding DataContext.ClientUncheckedCommand, RelativeSource={RelativeSource FindAncestor, AncestorType=UserControl}}"
                                    CommandParameter="{Binding DataContext, RelativeSource={RelativeSource FindAncestor, AncestorType=ListViewItem}}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </ToggleButton>
                    <TextBlock FontSize="16"
                               VerticalAlignment="Center"
                               Grid.Column="1">
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{}{0} ({1})">
                                <Binding Path="Name" />
                                <Binding Path="Company.Name" />
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </Grid>
            </Border>
        </ItemContainerTemplate>
        <ItemContainerTemplate x:Key="OrderItemTemplate">
            <Border Padding="0,0,0,8"
                    BorderBrush="{DynamicResource MaterialDesignDivider}"
                    BorderThickness="0,0,0,1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="4" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="0,7*" />
                        <ColumnDefinition Width="0,3*" />
                    </Grid.ColumnDefinitions>
                    <ToggleButton Style="{StaticResource MaterialDesignActionDarkToggleButton}"
                                  Content="{Binding OrderID}"
                                  FontSize="10"
                                  Margin="8,0,16,0"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Grid.Row="0"
                                  Grid.Column="0"
                                  Grid.RowSpan="4">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Checked">
                                <i:InvokeCommandAction
                                    Command="{Binding DataContext.OrderCheckedCommand, RelativeSource={RelativeSource FindAncestor, AncestorType=UserControl}}"
                                    CommandParameter="{Binding DataContext, RelativeSource={RelativeSource FindAncestor, AncestorType=ListViewItem}}" />
                            </i:EventTrigger>
                            <i:EventTrigger EventName="Unchecked">
                                <i:InvokeCommandAction
                                    Command="{Binding DataContext.OrderUncheckedCommand, RelativeSource={RelativeSource FindAncestor, AncestorType=UserControl}}"
                                    CommandParameter="{Binding DataContext, RelativeSource={RelativeSource FindAncestor, AncestorType=ListViewItem}}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </ToggleButton>
                    <TextBlock Text="{Binding State, StringFormat={}{0} заказ}"
                               Grid.Row="0"
                               Grid.Column="1" />
                    <TextBlock Text="{Binding Priority, StringFormat={}{0} приоритет}"
                               Grid.Row="1"
                               Grid.Column="1" />
                    <TextBlock
                        Text="{Binding Accepted, Converter={StaticResource OrderDateTimeToDateConverter}, StringFormat={}Принят: {0}}"
                        TextAlignment="Right"
                        Grid.Row="0"
                        Grid.Column="2" />
                    <TextBlock
                        Text="{Binding Finished, Converter={StaticResource OrderDateTimeToDateConverter}, StringFormat={}Завершен: {0}}"
                        TextAlignment="Right"
                        Grid.Row="1"
                        Grid.Column="2" />
                    <TextBlock Text="{Binding Summary}"
                               FontSize="18"
                               VerticalAlignment="Bottom"
                               Margin="0,0,8,0"
                               Grid.Row="3"
                               Grid.Column="1" />
                    <TextBlock TextAlignment="Right"
                               VerticalAlignment="Bottom"
                               FontSize="14"
                               Grid.Row="3"
                               Grid.Column="2">
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{}{0} ({1})">
                                <Binding Path="Client.Name" />
                                <Binding Path="Client.Company.Name" />
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </Grid>
            </Border>
        </ItemContainerTemplate>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*" />
            <RowDefinition Height="0.5*" />
        </Grid.RowDefinitions>
        <GroupBox Name="ClientListGroupBox"
                  BorderThickness="0"
                  Margin="0,0,0,16"
                  Grid.Row="0">
            <GroupBox.Header>
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="FormatListBulleted"
                                             Foreground="{StaticResource MaterialDesignBackground}"
                                             Margin="0,0,4,0" />
                    <TextBlock Text="Список клиентов"
                               Foreground="{StaticResource MaterialDesignBackground}" />
                </StackPanel>
            </GroupBox.Header>
            <Grid Name="ClientListGrid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid Name="SearchFiltersButtonsGrid"
                      Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBox Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             MinWidth="150"
                             Margin="0,0,16,8"
                             Grid.Column="0">
                        <materialDesign:HintAssist.Hint>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Magnify"
                                                         Margin="0,0,4,0" />
                                <TextBlock Text="Поиск по названию" />
                            </StackPanel>
                        </materialDesign:HintAssist.Hint>
                    </TextBox>
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Stretch"
                                Margin="0,0,0,8"
                                Grid.Column="1">
                        <ComboBox ItemsSource="{Binding SortProperties}"
                                  SelectedItem="{Binding SortProperty}"
                                  Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                                  materialDesign:HintAssist.Hint="Сортировка"
                                  Margin="0,0,16,0"
                                  Width="120" />
                        <ComboBox ItemsSource="{Binding SortDirections}"
                                  SelectedItem="{Binding SortDirection}"
                                  Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                                  materialDesign:HintAssist.Hint="Направление"
                                  Margin="0,0,16,0"
                                  Width="120" />
                        <Button Command="{Binding CreateClientCommand}"
                                Margin="0,0,16,0">
                            <materialDesign:PackIcon Kind="Plus" />
                        </Button>
                        <Button Command="{Binding DeleteClientCommand}">
                            <materialDesign:PackIcon Kind="Delete" />
                        </Button>
                    </StackPanel>
                </Grid>
                <ListView Name="ClientListListView"
                          ItemsSource="{Binding Clients}"
                          SelectedItem="{Binding SelectedClient}"
                          ItemTemplate="{StaticResource ClientItemTemplate}"
                          Validation.ErrorTemplate="{x:Null}"
                          HorizontalContentAlignment="Stretch"
                          Grid.Row="1">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="SelectionChanged">
                            <i:InvokeCommandAction Command="{Binding ClientSelectionChangedCommand}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </ListView>
            </Grid>
        </GroupBox>
        <GroupBox Name="ClientOrdersGroupBox"
                  BorderThickness="0"
                  Margin="0,0,0,16"
                  Grid.Row="1">
            <GroupBox.Header>
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="FormatListBulleted"
                                             Foreground="{StaticResource MaterialDesignBackground}"
                                             Margin="0,0,4,0" />
                    <TextBlock Text="Заказы клиента"
                               Foreground="{StaticResource MaterialDesignBackground}" />
                </StackPanel>
            </GroupBox.Header>
            <ListView Name="ClientOrdersListView"
                      ItemsSource="{Binding ClientOrders}"
                      ItemTemplate="{StaticResource OrderItemTemplate}"
                      Validation.ErrorTemplate="{x:Null}"
                      HorizontalContentAlignment="Stretch">
            </ListView>
        </GroupBox>
    </Grid>
</UserControl>